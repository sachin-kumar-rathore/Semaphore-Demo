<table class="table tableCustomStyle tableImg table-hover removeTblSearch bodrTop footable footable-6 footable-filtering footable-filtering-right footable-paging footable-paging-center breakpoint-lg" data-toggle-column="first" data-empty="There are no sites/buildings" data-show-toggle="true">
  <thead>
  <tr>
    <th>Property #</th>
    <th>Name</th>
    <th data-breakpoints="xs">Zip</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% sites.each do |site| %>
        <tr>
          <td><a class="clickable" data-href="<%= @project ? project_site_path(@project, site) : site_path(site) %>" data-toggle="modal" data-target="#viewContactModal1"><%= site.site_number %></td>
          <td><a class="clickable" data-href="<%= @project ? project_site_path(@project, site) : site_path(site) %>" data-toggle="modal" data-target="#viewContactModal1"><%= site.name %></td>
          <td><a class="clickable" data-href="<%= @project ? project_site_path(@project, site) : site_path(site) %>" data-toggle="modal" data-target="#viewContactModal1"><%= site.zip_code %></td>
          <td>
            <div class="openLeft moreOptions dropdown"> 
              <a class="" data-toggle="dropdown" href="javascript:void(0)" aria-expanded="false" data-animation="scale-down" role="button"> <i class="icon md-more-vert" aria-hidden="true"></i> </a>
              <div class="dropdown-menu" role="menu"> 
                <a class="dropdown-item clickable" data-href="<%= @project ? project_site_path(@project, site) : site_path(site) %>" role="menuitem" data-toggle="modal" data-target="#viewContactModal1"><i class="icon fa fa-pencil" aria-hidden="true"></i> Edit</a> 
                <a class="dropdown-item delete-clickable" data-href="<%= @project ? project_site_path(@project, site) : site_path(site) %>" role="menuitem"><i class="icon md-delete" aria-hidden="true"></i> Delete</a> 
              </div>
            </div>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate sites %>
</div>

<script>
  $('.footable').footable();
</script>