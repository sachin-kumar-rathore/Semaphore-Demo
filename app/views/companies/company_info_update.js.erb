<% if @company.errors.blank? %>
  $('#company-info .alerts').html("Successfully saved data for company info.").removeClass("alerts-danger");
  $('#company-info .error-messages').html("");
<% else %>
  $('#company-info .alerts').html("Could not save data for company info.").addClass("alerts-danger");
  $('#company-info .error-messages').html("<%= j render partial: 'shared/error_messages', locals: {obj: @company} %>");
<% end %>