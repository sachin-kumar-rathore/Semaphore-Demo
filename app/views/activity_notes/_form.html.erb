<!-- Note Modal -->
<div class="modal fade" id="noteFormCenter" aria-hidden="true" aria-labelledby="noteFormCenter"
  role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @note, url: url_for(controller: controller, action: action), remote: true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h6 class="modal-title"><%= @note.new_record? ? 'ADD NEW NOTE' : 'EDIT NOTE' %></h6>
        </div>
        <div class="modal-body">
          <div class="example-wrap">
            <div class="error-messages"></div>
            <div class="row">
              <div class="form-group form-material col-md-8">
                <label class="form-control-label" id="inputSubject" >Subject:</label>
                <%= form.text_field 'subject', class: "form-control", required: true %>
              </div>
              <div class="form-group form-material col-md-4">
                <label class="form-control-label">Date:</label>
                <div class="input-group">
                  <span class="input-group-addon">
                  <i class="icon md-calendar" aria-hidden="true"></i>
                  </span>
                  <%= form.text_field 'date_str', class: "form-control  datepicker", value:  @note.date ? @note.date : Date.today.strftime('%m/%d/%Y'), data: {plugin: "datepicker"}, required: true %>
                </div>
              </div>
            </div>
            <%= hidden_field_tag 'activity_id', @activity.id %>
            <div class="row">
              <div class="form-group form-material col-md-12">
                <label class="form-control-label" id="inputDescription" >Descriptor:</label>
                <%= form.text_area 'description', class: "form-control", required: true %>
              </div>
            </div>
            <div class="row">
              <div class="form-group form-material col-md-6">
                <button type="submit" class="btn btn-sm green-btn"><%= @note.new_record? ? ' Save ' : ' Save changes' %></button>
                <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
                <% unless @note.new_record? %>
                  <%= link_to 'Delete', activity_note_path(@note, activity_id: @activity.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->
