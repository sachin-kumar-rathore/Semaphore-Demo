<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Subscription</th>
      <th>Name</th>
      <th>Company number</th>
      <th>Business sector</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Country</th>
      <th>Website</th>
      <th>Email</th>
      <th>Member investor</th>
      <th>Utility provider</th>
      <th>Notes</th>
      <th>Business unit</th>
      <th>Company establishment year</th>
      <th>Years business located</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.owner_id %></td>
        <td><%= company.subscription_id %></td>
        <td><%= company.name %></td>
        <td><%= company.company_number %></td>
        <td><%= company.business_sector %></td>
        <td><%= company.address_line_1 %></td>
        <td><%= company.address_line_2 %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= company.zip_code %></td>
        <td><%= company.country %></td>
        <td><%= company.website %></td>
        <td><%= company.email %></td>
        <td><%= company.member_investor %></td>
        <td><%= company.utility_provider %></td>
        <td><%= company.notes %></td>
        <td><%= company.business_unit %></td>
        <td><%= company.company_establishment_year %></td>
        <td><%= company.years_business_located %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

