<div class="row">
  <div class="col-xl-12">
    <div class="panel">
      <header class="panel-heading">
        <h3 class="panel-title">
          <div class="row">
            <div class="col-md-9">
              <div class="row">
                <div class="col-md-3 col-6">
                  <%= select_tag :activities_filter_by_company, options_for_select(load_data_with_id(current_org.companies)), include_blank: 'All Companies' , class: 'form-control', data: { plugin: "selectpicker" } %>
                </div>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <%= link_to "ADD NEW ACTIVITY", new_activity_path, class: "col-md-12 btn btn-block green-btn", data: { turbolinks: false } %>
            </div>
          </div>
        </h3>
      </header>
      <div class="panel-body designTable" id="activitiesList">
        <%= render :partial => 'list', locals: {activities: @activities} %>
      </div>
    </div>
  </div>
</div>