<table class="table tableCustomStyle tableImg table-hover removeTblSearch bodrTop footable footable-6 footable-filtering footable-filtering-right footable-paging footable-paging-center breakpoint-lg" data-toggle-column="first" data-empty="There are no companies" data-show-toggle="true">
  <thead>
    <tr>
      <th>COMPANY NAME</th>
      <th>DATE</th>
      <th data-breakpoints="xs"></th>
    </tr>
  </thead>
  <tbody>
    <% companies.each do |company| %>
      <tr>
        <td><a class="custom-href" href="<%= edit_company_path(company) %>"><%= company.name %></td>
        <td><a class="custom-href" href="<%= edit_company_path(company) %>"><%= company.updated_at.strftime("%m/%d/%Y") %></td>
        <td>
          <div class="openLeft moreOptions dropdown">
            <a class="" data-toggle="dropdown" href="javascript:void(0)" aria-expanded="false" data-animation="scale-down" role="button">
              <i class="icon md-more-vert" aria-hidden="true"></i>
            </a>
            <div class="dropdown-menu" role="menu">
              <a class="dropdown-item" href="<%= edit_company_path(company) %>" role="menuitem"><i class="icon md-eye" aria-hidden="true"></i> View</a>
              <a class="dropdown-item delete-option" data-href="<%= company_path(id: company) %>" role="menuitem"><i class="icon md-delete" aria-hidden="true"></i> Delete</a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate companies %>
</div>

<script>
  $('.footable').footable();
</script>