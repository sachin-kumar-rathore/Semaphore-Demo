<div class="modal fade modalStyle" id="emailDetailsModal" aria-hidden="true" aria-labelledby="emailDetailsModal"
     role="dialog" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h6 class="modal-title" id="addUserModalLabel"><%= "EMAIL DETAILS" %></h6>
      </div>
      <div class="modal-body">
        <hr>
        <div class="example">
          <div class="row">
            <div class="col-md-12">
              <ul class="list-group list-group-full">
                <li class="list-group-item"><b>From: </b> <%= email.sent_by %></li>
                <li class="list-group-item"><b>To: </b> <%= email.sent_to %></li>
                <li class="list-group-item"><b>Cc: </b> <%= email.cc %></li>
                <li class="list-group-item"><b>Subject: </b> <%= email.subject %></li>
                <li class="list-group-item"><b>Attachment: </b></li>
              </ul>
            </div>
          </div>
          <hr>

          <% if email.contacts.count > 0 %>
            <% email_contact = email.contacts.first %>
            <div class="row">
              <div class="col-md-12">
                <ul class="list-group list-group-full">
                  <li class="list-group-item"><%= email_contact.name %>, <%= email_contact.organization.name %></li>
                  <li class="list-group-item"><%= email_contact.title %>, <%= email_contact.address_line_1 %></li>
                  <li class="list-group-item"><%= email_contact.address_line_2 %>, <%= email_contact.city_state_zip %></li>
                  <li class="list-group-item">Toll: <%= email_contact.phone_number_1 %></li>
                  <li class="list-group-item">Direct: <%= email_contact.cell_phone %></li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

