<!-- Site Modal -->
<div class="modal fade modalStyle" id="siteLoisImportFormCenter" aria-hidden="true" aria-labelledby="siteImportFormCenter"
  role="dialog" tabindex="-1">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <%= form_tag lois_import_sites_path, method: :post, multipart: true, remote: true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title"><%= "IMPORT SITES/BUILDINGS" %></h4>
        </div>
        <div class="modal-body">
          <div class="import-sites formStyle">
            <div class="example">
              <div class="row">
                <div class="col-md-6 border-right-1">
                  <div class="form-group">
                    <label>File:</label>
                    <%= file_field_tag 'lois_import[file]', class: 'lois-file', required: true %>
                  </div>
                  <div class="m-10">*Note: This may take a couple minutes.</div>
                  <div class="form-group">
                    <label>Business Unit:</label>
                    <%= select_tag 'lois_import[business_unit_id]', options_for_select(load_type("business_units")), :class => 'form-control custom-select' %>
                  </div>
                  <%= check_box_tag 'lois_import[create_new_contacts]', true, false %>
                  <%= label_tag "lois_import[create_new_contacts]", 'Create new contact if email not found', class: "label" %>
                  <br/>
                  <br/>
                </div>
                <div class="col-md-6 requirements">
                  <h5 class="example-title">Requirements</h5>
                  <p>Use the XML file as downloaded from your LOIS account.</p>
                  <p>These columns will be imported to the system (make sure column names are correct):</p>
                  <p>Building ID, Building Name, Available Sq. Ft., Total Sq. Ft., Address, City, State, Zip, County Name, Latitude, Longitude, Building Type and
                    contact related columns (Contact Name, Contact Organization Name, Contact Street, Contact City, Contact State, Contact Zip, Contact Phone, Contact E-mail, Contact Fax, Contact Web Address, Contact LinkedIn)
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="modalFooterBtns">
            <button type="submit" class="btn btn-primary spinnerButton">Upload & import Sites/Buildings</button>
            <div class="spinner" hidden>
              <div class="bounce1"></div>
              <div class="bounce2"></div>
              <div class="bounce3"></div>
            </div>
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->

