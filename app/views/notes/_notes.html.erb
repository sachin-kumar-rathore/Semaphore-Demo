<table class="table tableCustomStyle tableImg table-hover removeTblSearch bodrTop footable footable-6 footable-filtering footable-filtering-right footable-paging footable-paging-center breakpoint-lg" data-toggle-column="first" data-empty="There are no notes" data-show-toggle="true" >
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th data-breakpoints="xs">Notes</th>
      <th data-breakpoints="xs"></th>
    </tr>
  </thead>

  <tbody>
    <% for note in notes %>
      <tr>
        <td><%= note.date %></td>
        <td><%= note.subject.truncate(40) %></td>
        <td><%= note.description.truncate(50) %></td>
        <td>
          <div class="openLeft moreOptions dropdown"> 
            <a class="" data-toggle="dropdown" href="javascript:void(0)" aria-expanded="false" data-animation="scale-down" role="button"> <i class="icon md-more-vert" aria-hidden="true"></i> </a>
            <div class="dropdown-menu" role="menu"> 
              <a class="dropdown-item clickable" data-href="<%= project_note_path(note, project_id: @project.id) %>" role="menuitem" data-toggle="modal" data-target="#viewContactModal1"><i class="icon fa fa-pencil" aria-hidden="true"></i> Edit</a> 
              <a class="dropdown-item delete-clickable" data-href="<%= project_note_path(note, project_id: @project.id) %>" role="menuitem"><i class="icon md-delete" aria-hidden="true"></i> Delete</a> 
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate notes %>
</div>

<script>
  $('.footable').footable();
</script>