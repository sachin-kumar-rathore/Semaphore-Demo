<!-- Assign Email to Contact Modal -->
<div class="modal fade modalStyle" id="assignEmailToContact" aria-hidden="true" aria-labelledby="assignEmailToContact"
     role="dialog" tabindex="-1">
  <div class="modal-dialog modal-simple modal-center">
    <div class="modal-content">
      <%= form_tag attach_contact_to_email_email_path(email), method: :post, remote: true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="addUserModalLabel">ADD CONTACT</h4>
        </div>
        <div class="modal-body">
          <div class="example formStyle">
            <div class="row">
              <div class="form-group col-md-12">
                <label>Assign To:</label>
                <%= select_tag "contact_id", options_for_select(load_data_with_id(current_org.contacts)), class: 'form-control custom-select' %>
              </div>
            </div>
          </div>

					<div class="modalFooterBtns">
						<button type="submit" class="btn btn-primary">Assign</button>
						<button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
					</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->

