<header>
  <div class="headerSection">
    <div class="container">
      <div class="logo"> 
        <a href="<%= logo_redirect_path %>"><%= render '/layouts/logo_svg' %></a>
      </div>
    </div>
  </div>
</header>
<section>
  <div class="rightImgBg signUpPage">
    <div class="container">
      <div class="formSection">
        <div class="formTitle">
          <h3>Sign up for your account</h3>
        </div>
        <div class="formStyle">
          <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :invitation_token %>
            <div class="org-labl">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="orgName">Organization Name:</label>
                  <input type="text" class="form-control outlineFld" id="orgName" placeholder="Organization Name" value="<%= f.object.organization.name %>" disabled>
                </div>
                <div class="form-group col-md-6 org-labl">
                  <label for="orgURL">Organization URL/ID:</label>
                  <input type="text" class="form-control outlineFld" id="orgURL" placeholder="Organization URL/ID" value="<%= f.object.organization.url %>" disabled>
                </div>
              </div>
            </div>
            <% if f.object.class.require_password_on_accepting %>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="lastName">First Name:</label>
                  <%= f.text_field :first_name, required: true, class: "form-control outlineFld" %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="lastName">Last Name:</label>
                  <%= f.text_field :last_name, required: true, class: "form-control outlineFld" %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="Email">Email:</label>
                  <%= f.email_field :email, required: true, class: "form-control outlineFld", disabled: true %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="password">Password:</label>
                  <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control outlineFld", id: "pwd" %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="confirmPassword">Confirm Password:</label>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control outlineFld", id: "confirmPassword" %>
                </div>
              </div>
            <% end %>
            <div class="formBtnSection">
              <button class="btn primaryBtn">Sign Up</button>
            </div>
          <%  end %>
        </div>
      </div>
    </div>
  </div>
  <div class="pageBg">
    <div class="pageBgCircle circleOne"></div>
    <div class="pageBgCircle circleTwo"></div>
    <div class="pageBgCircle circleThree"></div>
  </div>
</section>
