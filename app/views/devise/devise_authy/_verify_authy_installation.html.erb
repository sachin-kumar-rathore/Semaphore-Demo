<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <h4 class="modal-title">Verify Your Authy Token</h4>
</div>
<div class="modal-body">
  <div class="formStyle">
    <div class="error-messages" id="error_explanation"></div>
    <%= verify_authy_installation_form({ remote: true}) do %>
      <div class="row">
        <div class="form-group col-md-6">
          <label for="taskName">Token:</label>
          <%= text_field_tag :token, "", autocomplete: :off, id: 'authy-token', class: 'form-control', required: true %>
        </div>
      </div>
      <div class="modalFooterBtns">
        <button type="submit" class="btn btn-primary">Check Token</button>
        <%= link_to 'Request SMS', user_request_sms_path, remote:true, method: :post, class: "btn btn-primary" %>
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
      </div>
    <% end %>
  </div>
</div>