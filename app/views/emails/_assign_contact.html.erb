<!-- Assign Email to Contact Modal -->
<div class="modal fade" id="assignEmailToContact" aria-hidden="true" aria-labelledby="assignEmailToContact"
     role="dialog" tabindex="-1">
  <div class="modal-dialog modal-simple modal-center">
    <div class="modal-content">
      <%= form_tag attach_contact_to_email_email_path(email), method: :post, remote: true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h6 class="modal-title"><%= "ADD CONTACT" %></h6>
        </div>
        <div class="modal-body">
          <div class="example">
            <div class="row">
              <div class="form-group form-material col-md-12">
                <label class="form-control">Assign To:</label>
                <%= select_tag "contact_id", options_for_select(load_data_with_id(current_org.contacts)), class: 'form-control', data: {plugin: "selectpicker"} %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group form-material col-md-6">
              <button type="submit" class="btn btn-sm green-btn">Assign</button>
              <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->

