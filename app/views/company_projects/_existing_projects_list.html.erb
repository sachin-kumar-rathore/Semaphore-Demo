<table class="table table-striped table-hover toggle-circle footable" data-toggle-column="first" data-empty="There are no projects" data-show-toggle="true" id="existingProjectsTable">
  <thead>
    <tr>
      <th>PROJECT#</th>
      <th>PROJECT NAME</th>
      <th data-breakpoints="xs">STARTED</th>
      <th data-breakpoints="xs">STATUS</th>
      <th data-breakpoints="xs">OPERATIONS</th>
    </tr>
  </thead>
  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.project_number %></td>
        <td><%= project.name %></td>
        <td><%= project.active_date %></td>
        <td><%= project.status %></td>
        <td><%= button_to "Add To Company",attach_project_to_company_company_project_path(@company, project), remote: true, data: { confirm: "Are you sure you want to add this project to company?" }, class: "btn btn-sm green-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<div class="digg_pagination">
  <%= js_will_paginate projects %>
</div>
<br/>

<script>
  $('.footable').footable();
</script>