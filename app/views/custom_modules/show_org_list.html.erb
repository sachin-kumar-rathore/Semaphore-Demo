<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title"><%= params[:disable] ? 'Disable' : 'Enable' %> <%= @custom_module.name %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <%= form_tag url_for(controller: 'custom_modules', action: 'enable_disable_custom_module'), method: :patch do %>
        <div class="row">
          <div class="form-group col-md-4">
            <label>Select Organization</label><br>
            <%= select_tag :organization_id, options_for_select(load_data_with_id(@organizations)), { class: "form-control", data:{ plugin: 'selectpicker', "live-search":true}, include_blank: 'Please Select' }%>
          </div>
        </div>
        <%= hidden_field_tag 'disable', true if params[:disable] %>
        <hr>
        <div class="row">
          <div class="form-group mbFullWd col-auto">
            <button type="submit" class="btn green-btn col-md-3"><%= params[:disable] ? 'Disable' : 'Enable' %></button>
          </div>
          <div class="form-group mbFullWd col-auto">
            <%= link_to 'Cancel', custom_modules_path, class: "btn btn-outline-primary", data: { turbolinks: false } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>