<div class="row">
  <div class="col-xl-12">
    <div class="panel">
      <header class="panel-heading">
        <h3 class="panel-title">
          <div class="row">
            <div class="col-md-4 col-12">
              <h4>Files</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              <button class="btn btn-sm green-btn waves-effect waves-classic clickable" data-href="<%= new_file_path %>" type="button">ADD NEW FILE
              </button>
            </div>
          </div>
          <br />
          <div class="row">
            <div class="col-md-3 col-6">
              <%= select_tag :files_filter_by_project, options_for_select(load_data_with_id(current_org.projects)), include_blank: 'All Projects' , class: 'form-control', data: { plugin: "selectpicker" } %>
            </div>
          </div>
        </h3>
      </header>
      <div class="panel-body" id="filesList">
        <%= render :partial => 'files', locals: {files: @files} %>
      </div>
    </div>
  </div>
</div>

<div id="createOrEditFile"></div>
