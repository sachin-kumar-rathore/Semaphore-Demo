<div class="card cardPadding mb--30">
  <div class="formRowSize">
    <%= form_tag url_for(controller: controller, action: action), remote: true, method: :get do %>
      <div class="form-row">
        <div class="form-group col-md-6 col-lg-3">
          <label for="contactName">Name:</label>
          <input type="text" name="name" placeholder="Name" class="form-control">
        </div>
        <div class="form-group col-md-6 col-lg-3">
          <label for="contactEmail">Email:</label>
          <input type="text" name="email" placeholder="Email" class="form-control">
        </div>
        <div class="form-group col-md-6 col-lg-3">
          <label for="contactOrganization">Organization:</label>
          <input type="text" name="organization" placeholder="Organization" class="form-control">
        </div>
        <div class="form-group col-md-6 col-lg-3 align-self-end">
          <button type="submit" class="btn btn-primary">Update & Show List</button>
        </div>
      </div>
    <% end %>
  </div>
</div>