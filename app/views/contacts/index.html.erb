<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xl-12">
    <div class="panel">
      <div class="panel-body">
        <%= form_tag organization_contacts_path(@organization), method: :get do %>
            <input type="text" name="query" placeholder="filter by name, email">
            <button type="submit">Filter</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xl-12">
    <div class="panel">
      <header class="panel-heading">
        <h3 class="panel-title">
          <a class="btn btn-success" href="<%= new_organization_contact_path() %>"><i class="glyphicon glyphicon-plus"></i> ADD CONTACT</a>
        </h3>
      </header>
      <div class="panel-body">
        <table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
          <thead>
          <tr>
            <th>NAME</th>
            <th>ORGANIZATION</th>
            <th>PHONE</th>
            <th>EMAIL</th>
          </tr>
          </thead>
          <tbody>
          <% for contact in @contacts %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.organization ? contact.organization.name : "ORG" %></td>
                <td><%= contact.cell_phone %></td>
                <td><%= contact.email %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

