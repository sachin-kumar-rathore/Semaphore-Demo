<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">Edit Section Information</h3>
  </div>
  <div class="panel-body">
    <div class="orgInfoAlerts success"></div>
    <div class="orgInfoErrors"></div>
    <br>
    <div class="col-md-12">
      <%= form_for @section_guide do |f| %>
        <div class="row">
          <div class="form-group col-md-4">
            <label>Name</label><br>
            <%= f.text_field :section_name, class: "form-control", disabled: true %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-12">
            <label>Section Info</label><br>
            <%= f.text_area :section_info, rows: 8, class: "form-control", required: true %>
          </div>
        </div>
        <div class="row">
          <div class="form-group mbFullWd col-auto">
            <button type="submit" class="btn green-btn col-md-3">Update</button>
          </div>
          <div class="form-group mbFullWd col-auto">
            <%= link_to 'Cancel', section_guides_path, class: "btn btn-outline-primary", data: { turbolinks: false } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>