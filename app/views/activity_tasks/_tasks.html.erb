<table class="table tableCustomStyle tableImg table-hover removeTblSearch bodrTop footable footable-6 footable-filtering footable-filtering-right footable-paging footable-paging-center breakpoint-lg" data-toggle-column="first" data-empty="There are no tasks." data-show-toggle="true" >
  <thead>
    <tr>
      <th>TASK</th>
      <th>PRIORITY</th>
      <th data-breakpoints="xs">STATUS</th>
      <th data-breakpoints="xs">COMPLETE</th>
      <th data-breakpoints="xs">ASSIGNED TO</th>
      <th data-breakpoints="xs">DESCRIPTION</th>
      <th data-breakpoints="xs">START DATE</th>
      <th data-breakpoints="xs">DUE DATE</th>
      <th data-breakpoints="xs">OPERATIONS</th>
    </tr>
  </thead>
  <tbody>
    <% for task in tasks %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= task.progress %> %</td>
        <td><%= task.assignee.full_name %></td>
        <td><%= task.description.truncate(25) %></td>
        <td><%= task.start_date.strftime("%m/%d/%Y") if task.start_date.present? %></td>
        <td><%= task.end_date.strftime("%m/%d/%Y") if task.end_date.present? %></td>
        <td>
          <button class="clickable btn btn-primary" data-href="<%= activity_task_path(task, activity_id: @activity) %>">Edit</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate tasks %>
</div>

<script>
  $('.footable').footable();
</script>