<table class="table table-striped table-hover toggle-circle footable" id="projectsList" data-toggle-column="first" data-empty="There are no projects" data-show-toggle="true">
  <thead>
    <tr>
      <th>PROJECT#</th>
      <th>PROJECT NAME</th>
      <th data-breakpoints="xs">COMPANY NAME</th>
      <th data-breakpoints="xs">STARTED</th>
      <th data-breakpoints="xs">STATUS</th>
      <th data-breakpoints="xs">OPERATIONS</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.unique_id %></td>
        <td><%= project.name %></td>
        <td><%=  %></td>
        <td><%= project.active_date %></td>
        <td><%= project.status %></td>
        <td><a href="projects/<%= project.id %>/edit" class="btn btn-sm green-btn" data-turbolinks="false">View</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= js_will_paginate @projects %>
</div>

<script>
  $('.footable').footable();
</script>