<% breadcrumb :my_details %>

<div class="section-info-flash"></div>
<%= render '/shared/settings_tab_headers' %>

<div class="panel">
  <header class="panel-heading">
    <div class="tasksTopOptions">
      <div class="row">
        <div class="col">
          <div class="tableTitle">
           <h2>Edit Details</h2>
        </div>
        </div>
        <div class="col col-auto">
          <div class="tasksRightOptions">
            <ul>
              <li class="enbale-disable-2FA">
                <% if current_user.authy_enabled %>
                  <%= link_to "Disable Two-Factor Authentication", user_disable_authy_path, method: :post, remote: true, class: "btn btn-orng btn-primary" %>
                <% else %>
                  <%= link_to "Enable Two-Factor Authentication", user_enable_authy_path, remote: true, class: "btn btn-primary" %></td>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="panel-body">
    <hr>
    <%= form_for current_user, url: update_user_details_manage_user_path(current_user), remote: true do |form| %>
      <div class="error-messages"></div>
      <div class="row">
        <div class="form-group col-md-4">
          <label class="form-control-label">First Name:</label>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
          <label class="form-control-label">Last Name:</label>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
          <label class="form-control-label">Email:</label>
          <%= form.email_field :email, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label class="form-control-label">Password:</label>
          <%= form.password_field :password, class: "form-control password-field" %>
        </div>
        <div class="form-group col-md-4">
          <label class="form-control-label">Password Confirmation:</label>
          <%= form.password_field :password_confirmation, class: "form-control password-field" %>
        </div>
        <h5 class="col-md-12">*Note - If you don't wish to reset password, leave it blank.</h5>
      </div>
      <hr><br>
      <div class="row">
        <div class="form-group col-md-6">
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="enable-2-FA"></div>