<% if @project.present? %>
  $('#sitesTab').html("<%= j render partial: 'project_sites_list', locals: {project_sites: @project_sites} %>");
  $(".tab-content").children('.tab-pane').removeClass("active");
  $('#sitesTab').addClass("active");
  $(".nav-item").children('.nav-link').removeClass("active");
  $('#sitesNavLink').addClass("active");
<% else %>
  $('.flashMessages').html("<%= escape_javascript render partial: 'shared/flash_messages' %>");
<% end %>
