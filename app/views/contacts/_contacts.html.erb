<table class="footable table tableCustomStyle table-hover removeTblSearch" data-toggle-column="first" data-empty="There are no contacts" >
  <thead>
    <tr>
      <th>NAME</th>
      <th >ORGANIZATION</th>
      <th data-breakpoints="xs">PHONE</th>
      <th data-breakpoints="xs sm md">EMAIL</th>
      <th data-name="action"></th>
    </tr>
  </thead>

  <tbody>
    <% for contact in contacts %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.organization ? contact.organization.name : 'ORG' %></td>
        <td><%= contact.cell_phone %></td>
        <td><%= contact.email %></td>
        <td>
          <div class="openLeft moreOptions dropdown">
            <a class="" data-toggle="dropdown" href="javascript:void(0)" aria-expanded="false" data-animation="scale-down" role="button"> <i class="icon md-more-vert" aria-hidden="true"></i> </a>
            <div class="dropdown-menu" role="menu">
              <a class="dropdown-item clickable" data-href="<%= @project ? project_contact_path(@project, contact) : contact_path(contact) %>" role="menuitem"><i class="icon fa fa-pencil" aria-hidden="true"></i> Edit</a>
              <a class="dropdown-item delete-option" data-href="<%= contact_path(contact) %>" role="menuitem"><i class="icon md-delete" aria-hidden="true"></i> Delete</a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate contacts, container: false, inner_window: "2", link_separator: "" %>
</div>
<script>
  $('.footable').footable();
</script>