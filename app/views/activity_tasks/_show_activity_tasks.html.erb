<div class="panel">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-10 col-12">
        <h3>Activity Tasks</h3>
      </div>
      <div class="col-md-2 col-6">
        <button class="btn btn-sm green-btn waves-effect waves-classic clickable col-md-12" data-href="<%= new_activity_task_path(activity_id: @activity.id) %>" type="button">ADD NEW TASK
        </button>
      </div>
    </div>
  </div>
  <div class="panel-body" id="tasksList" >
    <%= render partial: 'tasks', locals: { tasks: @tasks } %>
  </div>
</div>
<div id="createOrEditTask"></div>