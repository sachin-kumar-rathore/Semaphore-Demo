<div class="panel">
  <div class="panel-body">
    <% if write_access = can_write? %>
      <div class="row">
        <div class="col-md-2 col-6">
          <button class="btn btn-primary green-btn waves-effect waves-classic col-auto clickable" data-href="<%= new_project_note_path(project_id: @project.id) %>" type="button" ><i class="icon fa fa-plus" aria-hidden="true"></i>Add New Note </button>
        </div>
      </div>
    <% end %>
    <div class="tableDesign" id="notesList">
      <%= render partial: "notes", locals: {notes: @notes, write_access: write_access} %>
    </div>
  </div>
  <div id="createOrEditNote"></div>
</div>
<%= render partial: "/shared/confirmation_popup", locals: { record_type: 'Project Note' } %>