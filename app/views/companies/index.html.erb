<div class="row">
  <div class="col-xl-8">
    <div class="panel">
      <header class="panel-heading">
        <h3 class="panel-title">
          <div class="row">
            <div class="col-md-4">
              <h4> Companies</h4>
            </div>
            <div class="col-md-8">
              <button class="pull-right btn btn-sm green-btn waves-effect waves-classic clickable" data-href="<%= new_company_path %>"
                id="createNewCompany" type="button">ADD COMPANY
              </button>
            </div>
          </div>
        </h3>
      </header>

      <div class="panel-body" id="companiesList">
        <%= render partial: 'companies', locals: {companies: @companies} %>
      </div>
    </div>
  </div>
  <div class="col-xl-4">
    <%= render partial: 'filters', locals: { controller: 'companies', action: 'index'} %>
  </div>
</div>
<div id="createOrEditCompany"></div>
