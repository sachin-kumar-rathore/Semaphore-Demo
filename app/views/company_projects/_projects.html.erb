<table class="table table-striped table-hover toggle-circle footable" id="companyProjectsList" data-toggle-column="first" data-empty="There are no projects" data-show-toggle="true">
  <thead>
    <tr>
      <th>PROJECT#</th>
      <th>PROJECT NAME</th>
    </tr>
  </thead>
  <tbody>
    <% @company_projects.each do |project| %>
      <tr>
        <td><%= project.project_number %></td>
        <td><%= project.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= js_will_paginate @company_projects %>
</div>

<script>
  $('.footable').footable();
</script>