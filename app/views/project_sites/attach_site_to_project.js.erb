<% if @project_site.errors.blank? %>
  $('#showExistingSites').modal('hide');
  $('.flashMessages').html("<%= j render partial: 'shared/flash_messages' %>"); 
<% else %>
  $('#showExistingSites .error-messages').html("<%= j render partial: 'shared/error_messages', locals: {obj: @site} %>");
<% end %>
reloadSites('<%= @project.id %>');