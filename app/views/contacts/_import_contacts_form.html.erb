<!-- Contact Modal -->
<div class="modal fade" id="contactImportFormCenter" aria-hidden="true" aria-labelledby="contactImportFormCenter"
     role="dialog" tabindex="-1">
  <div class="modal-dialog modal-simple modal-center">
    <div class="modal-content">
      <%= form_tag import_organization_contacts_path(organization), :method => :post, :multipart => true do |form| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h6 class="modal-title"><%= "IMPORT CONTACTS" %></h6>
          </div>

          <div class="modal-body">
            <div class="import-contacts">
              <div class="example">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-material row">
                      <label class="col-md-3 form-control-label">File: </label>
                      <div class="col-md-9">
                        <button type="button" class="btn green-btn" id="fakeFileUploadBtn">File Upload</button>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= file_field_tag 'import[file]', id: 'contactsFileUploadHidden', class: 'hidden' %>
                    </div>

                    <div class="fileName m-5"></div>
                    <div class="m-10">*Note: This may take a couple minutes.</div>

                    <div class="form-group form-material">
                      <label class="form-control-label">Category:</label>
                      <%= select_tag 'import[category]', options_for_select(["Default", "Cell", "Work", "Office", "Home", "Other"]), :class => 'form-control' %>
                    </div>
                    <div class="form-group form-material">
                      <label class="form-control-label">Business Unit:</label>
                      <%= select_tag 'import[business_unit]', options_for_select(["Default", "Cell", "Work", "Office", "Home", "Other"]), :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-6 requirements">
                    <h5 class="example-title">Requirements</h5>
                    <p>The order of the fields should be:</p>
                    <ul class="list-group list-group-full">
                      <li class="list-group-item"><span class="circle">&bull;</span> Contact Name (Required)</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Organization (Required)</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Title</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Address 1</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Address 2</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> City State Zip</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Phone 1</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Phone 2</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Cell Phone</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Fax</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Email</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Website</li>
                      <li class="list-group-item"><span class="circle">&bull;</span> Notes</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <div class="modal-footer text-left">
              <button type="submit" class="btn green-btn">Upload & import Contacts</button>
              <button type="button" class="btn btn-default cancel-btn" data-dismiss="modal">Close</button>
            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->