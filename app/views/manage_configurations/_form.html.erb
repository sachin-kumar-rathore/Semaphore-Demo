<!-- SettingType Modal -->
<div class="modal fade" id='<%= @type.singularize.concat('FormCenter') %>' aria-hidden="true" aria-labelledby='<%= @type.singularize.concat('FormCenter') %>'
  role="dialog" tabindex="-1">
  <div class="modal-dialog modal-center" role="document">
    <div class="modal-content">
      <%= form_for @setting_type, url: url_for(controller: 'manage_configurations', action: action), remote: true do |type| %>
        <%= hidden_field_tag 'type', @type %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h6 class="modal-title"><%= @type.titleize.singularize.upcase
 %> INFORMATION</h6>
        </div>
        <div class="modal-body">
          <div class="example-wrap">
            <div class="error-messages"></div>
            <div class="example">
              <% if @setting_type.has_attribute?(:status) %>
                <div class="row form-inline form-material">
                  <div class="col-md-2 ">
                    <label class="form-control-label pull-left">Status:</label>
                  </div>
                  <div class="col-md-8">
                    <div class="row">
                      <div class="form-inline col-md-3 col-6">
                        <%= type.radio_button :status, 'Active', checked: true, class: "pull-left" %>
                        <label for="inputRadiosUnchecked" class="pull-left">Active</label>
                      </div>
                      <div class="form-inline col-md-3 col-6">
                        <%= type.radio_button :status, 'Inactive' %>
                        <label for="inputRadiosChecked">Inactive</label>
                      </div>
                    </div>
                  </div>
                </div>
                <br/>
              <% end %>
              <div class="row">
                <div class="form-group form-material col-md-12">
                  <label class="form-control-label">Type:</label>
                  <%= type.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="row">
                <div class="form-group form-material col-md-6">
                  <button type="submit" class="btn btn-sm green-btn"><%= @setting_type.new_record? ? ' Save ' : ' Save changes' %></button>
                  <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->