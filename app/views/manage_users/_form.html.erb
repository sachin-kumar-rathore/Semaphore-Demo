<!-- User Modal -->
<div class="modal fade" id="userFormCenter" aria-hidden="true" aria-labelledby="userFormCenter"
  role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @user, url: organization_user_path, remote: true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h6 class="modal-title">EDIT USER</h6>
        </div>
        <div class="modal-body">
          <div class="example-wrap">
            <div class="error-messages"></div>
            <div class="example">
              <div class="row">
                <div class="form-group form-material col-md-6">
                  <label class="form-control-label">First Name:</label>
                  <%= form.text_field :first_name, class: "form-control" %>
                </div>
                <div class="form-group form-material col-md-6">
                  <label class="form-control-label">Last Name:</label>
                  <%= form.text_field :last_name, class: "form-control" %>
                </div>
                <div class="form-group form-material col-md-6">
                  <label class="form-control-label">Password:</label>
                  <%= form.password_field :password, class: "form-control" %>
                </div>
                <div class="form-group form-material col-md-6">
                  <label class="form-control-label">Password Confirmation:</label>
                  <%= form.password_field :password_confirmation, class: "form-control" %>
                </div>
                <h5 class="col-md-12">*Note - If you don't wish to reset password, leave it blank.</h5>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group form-material col-md-6">
              <button type="submit" class="btn btn-sm green-btn">Save changes</button>
              <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->