<% if @company.errors.blank? %>
  $('#facilities .alerts').html("Successfully saved data for company facilities.").removeClass("alerts-danger");
  $('#facilities .error-messages').html("");
<% else %>
  $('#facilities .alerts').html("Could not save data for company facilities.").addClass("alerts-danger");
  $('#facilities .error-messages').html("<%= j render partial: 'shared/error_messages', locals: {obj: @company} %>");
<% end %>