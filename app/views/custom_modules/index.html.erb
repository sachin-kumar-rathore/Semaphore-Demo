<div class="panel">
  <div class="panel-body">
    <table class="table table-striped table-hover toggle-circle footable tableCustomStyle" data-toggle-column="first" data-empty="There are no modules." data-show-toggle="true">
      <thead>
        <tr>
          <th>Module Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% for custom_module in @custom_modules %>
          <tr>
            <td><a class="custom-href" href="<%= edit_custom_module_path(custom_module) %>" data-turbolinks="false"><%= custom_module.name %></a></td>
            <td>
              <div class="openLeft moreOptions dropdown">
                <a class="" data-toggle="dropdown" href="javascript:void(0)" aria-expanded="false" data-animation="scale-down" role="button">
                  <i class="icon md-more-vert" aria-hidden="true"></i>
                </a>
                <div class="dropdown-menu" role="menu">
                  <a class="dropdown-item" href="<%= edit_custom_module_path(custom_module) %>" data-turbolinks="false" role="menuitem"><i class="icon md-edit" aria-hidden="true"></i> Edit</a>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="digg_pagination">
  <%= js_will_paginate @custom_modules %>
</div>

<script>
  $('.footable').footable();
</script>
