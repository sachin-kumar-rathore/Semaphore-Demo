<div class="panel activitiesTabOptions">
  <div class="panel-body">
    <div class="row">
      <div class="col">
        <div class="tableTitle">
          <h2>Company Activities</h2>
        </div>
      </div>
      <% if write_access = can_write? && can_write?('activities') %>
        <div class="col col-auto">
          <%= link_to new_company_activity_path(@company), class: "pull-right btn btn-default waves-effect waves-classic clickable", data: { turbolinks: false } do %>
            <i class="icon fa fa-plus btnIcon" aria-hidden="true"></i> Add New Activity
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel-body tableDesign" id="activitiesList">
    <%= render "company_activities/activities", write_access: write_access %>
  </div>
</div>