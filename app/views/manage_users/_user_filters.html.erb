<div class="filterSec">
  <div class="filter-heading"><h3>Filters</h3></div>
    <%= form_tag manage_users_path, remote: true, method: :get do %>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="addName">First Name:</label>
          <input type="text" name="first_name" class="form-control" id="addName">
        </div>
        <div class="form-group col-md-12">
          <label for="addName">Last Name:</label>
          <input type="text" name="last_name" class="form-control" id="addName">
        </div>        
        <div class="form-group col-md-12">
          <label>Business Unit:</label>
          <select class="form-control custom-select">
            <option>Default</option>
          </select>
        </div>
        <div class="form-group col-md-12">
          <label>Role:</label>
          <%= select_tag :user_role, options_for_select( load_type("security_roles")), class: 'form-control custom-select' %>
        </div>
      </div>
      <div class="form-group col-md-12 updBtn modalFooterBtns">
        <button type="submit" class="btn btn-primary">Update List</button>
      </div>
    <% end %>
  </div>
</div>

