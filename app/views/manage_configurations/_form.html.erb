<!-- SettingType Modal -->
<div class="modal fade modalStyle" id='<%= @type.singularize.concat('FormCenter') %>' aria-hidden="true" aria-labelledby='<%= @type.singularize.concat('FormCenter') %>'
  role="dialog" tabindex="-1">
  <div class="modal-dialog modal-simple" role="document">
    <div class="modal-content">
      <%= form_for @setting_type, url: url_for(controller: 'manage_configurations', action: action), remote: true do |type| %>
        <%= hidden_field_tag 'type', @type %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="addTaskModalLabel"><%= @type.titleize.singularize.upcase %> INFORMATION</h4>
        </div>
        <div class="modal-body">
          <div class="formStyle">
            <% if @setting_type.has_attribute?(:status) %>
              <div class="form-row">
                <div class="form-group col">
                  <div class="inline-items">
                    <ul>
                      <li class="lblMdBlock">
                        <label>Status</label>
                      </li>
                      <li>
                        <div class="custom-radioBtn">
                          <%= type.radio_button :status, 'Active', checked: true, id: "test8" %>
                          <label for="test8">Active</label>
                        </div>
                      </li>
                      <li>
                        <div class="custom-radioBtn">
                          <%= type.radio_button :status, 'Inactive', id: "test9" %>
                          <label for="test9">Inactive</label>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>    
          </div>
          <div class="example-wrap">
            <div class="error-messages"></div>
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="taskName">Type:</label>
                <%= type.text_field :name, class: "form-control", id: "taskName" %>
              </div>
            </div>
            <div class="example">
              <div class="row">
                <div class="form-group form-material col-md-6">
                  <button type="submit" class="btn btn-sm green-btn"><%= @setting_type.new_record? ? ' Save ' : ' Save changes' %></button>
                  <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->