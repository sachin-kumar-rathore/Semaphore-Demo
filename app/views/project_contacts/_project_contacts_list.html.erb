<div class="panel">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-7 col-12">
        <h3> Project Contacts </h3>
      </div>
      <div class="col-md-2 col-6">
        <button class="btn btn-sm green-btn waves-effect waves-classic col-md-12 clickable" data-href="<%= new_project_contact_path(@project) %>" type="button" >ADD CONTACT </button>
      </div>
      <div class="col-md-3 col-6">
        <%= button_to "ADD EXISTING CONTACT", show_existing_contacts_project_contacts_path(@project), class: "btn btn-sm green-btn waves-effect waves-classic col-md-12", method: :get, remote: true %>
      </div>
    </div>
  </div>
  <div class="panel-body tableDesign" id="contactsList">
    <%= render partial: "contacts/contacts", locals: {contacts: project_contacts} %>
  </div>
  <div id="createOrEditContact"></div>
</div>