<div class="modal fade modalStyle" id="packageDetailFormCenter" aria-hidden="true" aria-labelledby="emailDetailsModal"
     role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h6 class="modal-title"><%= "PACKAGE DETAILS" %></h6>
      </div>
      <div class="modal-body">
        <hr>
        <div class="example">
          <div class="row">
            <div class="col-md-12">
              <li class="list-group-item"><b>Name: </b> <%= package.name %></li>
            </div>
          </div>
          
          <li class="list-group-item"><b>Modules: </b></li>
          <% package.general_modules.in_groups_of(2).each do |general_modules| %>
            <div class="row">
              <% general_modules.each do |general_module| %>
                <% if general_module.present? %>
                  <div class="col-md-6">
                    <% icon, content = module_icon(general_module.controller_name) %>
                    <li class="list-group-item"><i class="site-menu-icon <%= icon %>" aria-hidden="true"><%= content %></i><%= general_module.name %></li>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        <hr>
        <div class="row">
          <div class="form-group col-md-6">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

