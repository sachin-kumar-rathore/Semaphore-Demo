<thead>
	<tr>
		<th data-name="priority" data-breakpoints="xs">Send To</th>
		<th data-name="Task Description" data-breakpoints="xs">Sent By</th>
		<th data-name="complete" data-breakpoints="xs">Subject</th>
		<th data-name="complete" data-breakpoints="xs">Date</th>
	</tr>
</thead>
<tbody>
	<% emails.each do |email| %>
		<tr>
			<td><%= email.sent_to %></td>
			<td><%= email.sent_by %></td>
			<td><span class="nowrapCol"><%= email.subject %></span></td>
			<td><%= email.email_date.strftime("%m/%d/%Y") if email.email_date %></td>
		</tr>
	<% end %>
</tbody>