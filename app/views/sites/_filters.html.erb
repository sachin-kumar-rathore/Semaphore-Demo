<div class="panel">
  <header class="panel-heading">
    <h3 class="panel-title">
    </h3>
  </header>
  <div class="panel-body">
    <div class="formStyle">
      <%= form_tag url_for(controller: controller, action: action), remote: true, method: :get do %>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="form-control-label">Property #:</label>
          <input type="text" name="site_number" class="form-control">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="form-control-label">Name:</label>
          <input type="text" name="property_name" class="form-control">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="form-control-label">Zip:</label>
          <input type="text" name="zip_code" class="form-control">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <button type="submit" class="btn btn-primary green-btn">Update List</button><br><br>
        </div>
        <div class="form-group col-md-6">
          <%= button_tag 'Clear All Filters', type: :reset, class: 'btn btn-outline-primary site-filter-clear' %>
        </div>
      </div>
      </div>
    </div>
    <% end %>
  </div>
</div>