<!-- Site Modal -->
<div class="modal fade modalStyle" id="DropboxFormCenter" aria-hidden="true" aria-labelledby="siteImportFormCenter"
  role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title">ENTER CODE</h4>
      </div>
        <%= form_tag verify_code_dropboxes_path, method: :post, multipart: true, remote: true do |form| %>
          <div class="modal-body">
            <div class="example-wrap">
              <div class="error-messages"></div>
              <div class="form-row">
                <div class="form-group col-md-12">
                  <label for="taskName">Code:</label>
                  <%= text_field_tag :code, "", class: "form-control dropbox-code" %>
                </div>
              </div>
              <div class="example">
                <div class="row">
                  <div class="form-group form-material col-md-6">
                    <button type="submit" class="btn btn-sm green-btn">Submit</button>
                    <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->
