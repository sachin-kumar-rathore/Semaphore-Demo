<!-- Contact Modal -->
<div class="modal fade" id="contactFormCenter" aria-hidden="true" aria-labelledby="contactFormCenter"
     role="dialog" tabindex="-1">
  <div class="modal-dialog modal-simple modal-center">
    <div class="modal-content">
      <%= form_for [organization, contact] do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title"><%= contact.new_record? ? "ADD CONTACT" : "EDIT CONTACT"%></h4>
        </div>

        <div class="modal-body">
          <div class="example-wrap">
            <%= render :partial => 'shared/error_messages', :locals => {:obj => form.object} %>
            <div class="example">
              <div class="row">
                <div class="form-group form-material col-md-4">
                  <%= form.text_field :name, class: "form-control", id: "inputBasicFirstName", placeholder: "Name", required: true %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.select :category, options_for_select(["Default", "Cell", "Work", "Office", "Home", "Other"]), :class => 'form-control' %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.select :business_unit, options_for_select(["Default", "Cell", "Work", "Office", "Home", "Other"]), :class => 'form-control' %>
                </div>
              </div>

              <div class="row">
                <div class="form-group form-material col-md-6">
                  <input type="text" class="form-control" id="inputBasicLastName" name="organizationName"
                         value="<%= organization.name %>" autocomplete="off" disabled/>
                </div>
                <div class="form-group form-material col-md-6">
                  <%= form.text_field :title, class: "form-control", id: "inputBasicTitle", placeholder: "Title" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group form-material col-md-6">
                  <%= form.text_field :address_line_1, class: "form-control", id: "inputBasicAddress1", placeholder: "Address 1" %>
                </div>
                <div class="form-group form-material col-md-6">
                  <%= form.text_field :address_line_2, class: "form-control", id: "inputBasicAddress2", placeholder: "Address 2" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group form-material col-md-12">
                  <%= form.text_field :city_state_zip, class: "form-control", id: "inputBasicCityState", placeholder: "City, State & Zip Code" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group form-material col-md-4">
                  <%= form.text_field :phone_number_1, class: "form-control", id: "inputBasicphone_number_1", placeholder: "Phone Number 1" %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.text_field :phone_number_2, class: "form-control", id: "inputBasicphone_number_2", placeholder: "Phone Number 2" %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.text_field :cell_phone, class: "form-control", id: "inputBasicCellPhone", placeholder: "Cell Phone" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group form-material col-md-4">
                  <%= form.text_field :fax, class: "form-control", id: "inputBasicFax", placeholder: "Fax" %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.url_field :website, class: "form-control", id: "inputBasicWebsite", placeholder: "Website" %>
                </div>
                <div class="form-group form-material col-md-4">
                  <%= form.email_field :email, class: "form-control", id: "inputBasicEmail", placeholder: "Email", required: true %>
                </div>
              </div>

            </div>

            <div class="row">

              <div class="form-group form-material col-md-6">

                <button type="submit" class="btn btn-sm green-btn"><%= contact.new_record? ? ' Save ' : ' Save changes ' %></button>
                <button type="button" class="btn btn-sm white-btn" data-dismiss="modal">Cancel</button>

              </div>

            </div>

          </div>

        </div>

      <% end %>
    </div>
  </div>
</div>
<!-- End Modal -->