<table class="table tableCustomStyle table-hover removeTblSearch footable footable-3 footable-filtering footable-filtering-right footable-paging footable-paging-center breakpoint-lg" data-toggle-column="first" data-empty="There are no contacts" data-show-toggle="true" id="existingContactsTable">
  <thead>
    <tr>
      <th>NAME</th>
      <th data-breakpoints="xs">ORGANIZATION</th>
      <th data-breakpoints="xs">EMAIL</th>
    </tr>
  </thead>

  <tbody>
    <% for contact in contacts %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.organization ? contact.organization.name : 'ORG' %></td>
        <td><%= button_to "Add To Project",attach_contact_to_project_project_contact_path(@project, contact), remote: true, data: { confirm: "Are you sure you want to add this contact to project?" }, class: "btn btn-primary green-btn" %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<div class="digg_pagination">
  <%= js_will_paginate contacts %>
</div>
<br/>

<script>
  $('.footable').footable();
</script>