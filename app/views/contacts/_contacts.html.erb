<table class="table table-striped table-hover toggle-circle footable" data-toggle-column="first" data-empty="There are no contacts" data-show-toggle="true" >
  <thead>
    <tr>
      <th>NAME</th>
      <th data-breakpoints="xs">ORGANIZATION</th>
      <th data-breakpoints="xs">PHONE</th>
      <th data-breakpoints="xs">EMAIL</th>
      <th data-breakpoints="xs">OPERATIONS</th>
    </tr>
  </thead>

  <tbody>
    <% for contact in contacts %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.organization ? contact.organization.name : 'ORG' %></td>
        <td><%= contact.cell_phone %></td>
        <td><%= contact.email %></td>
        <td>
          <button class="clickable btn btn-sm green-btn" data-href="<%= @project ? project_contact_path(@project, contact) : contact_path(contact) %>">Edit</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate contacts %>
</div>

<script>
  $('.footable').footable();
</script>