<!-- 2FA Modal -->
<div class="modal fade modalStyle" id="enable2FA" tabindex="-1" role="dialog" aria-labelledby="addUserModalLabel">
  <div class="modal-dialog modal-simple" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">ENABLE TWO-FACTOR AUTHENTICATION</h4>
      </div>
      <div class="modal-body">
        <div class="formStyle">
          <div class="error-messages" id="error_explanation"></div>
          <%= enable_authy_form({ remote: true}) do %>
            <div class="row">
              <div class="form-group col-md-4">
                <label for="taskName">Country:</label>
                <%= text_field_tag :country_code, '', :autocomplete => :off, id: "authy-countries", class: 'form-control', required: true %>
              </div>
              <div class="form-group col-md-7">
                <label for="taskName">Cell-Phone:</label>
                <%= text_field_tag :cellphone, '', :autocomplete => :off, class: 'form-control', required: true %>
              </div>
            </div>
            <div class="modalFooterBtns">
              <button type="submit" class="btn btn-primary">Enable</button>
              <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Modal -->