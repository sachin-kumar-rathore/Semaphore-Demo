<table class="table table-hover dataTable table-striped w-full" >
  <thead>
    <tr>
      <th>DATE</th>
      <th>SUBJECT</th>
      <th>NOTES</th>
    </tr>
  </thead>

  <tbody>
    <% for note in notes %>
      <tr data-href="<%= note_path(note, project_id: @project.id) %>" class="clickable" >
        <td class="col-md-2"><%= note.date %></td>
        <td class="col-md-2"><%= note.subject %></td>
        <td class="col-md-8"><%= note.description.truncate(100) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= js_will_paginate notes %>
</div>