							<h3> - Filter by Contact</h3>
						</div>
					</div>
				</div>

				<!-- Panel Filtering rows -->
				<table class="table tableCustomStyle table-hover removeTblSearch" id="dashboardEmails" data-paging="true" data-filtering="true">
