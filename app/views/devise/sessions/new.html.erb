<header>
  <div class="headerSection">
    <div class="container">
      <div class="logo"><a href="javascript:void(0)"><img src="/assets/logo.png" alt="EDLT"></a></div>
    </div>
  </div>
</header>
<section>
  <div class="rightImgBg loginPage">
    <div class="container">
      <div class="formSection">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="formTitle">
            <h3>Log in to your account</h3>
          </div>
          <div class="formStyle">
            <form>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="email">Email:</label>
                  <%= f.email_field :email, autofocus: "true", class: "form-control outlineFld", placeholder: "" %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="password">Password:</label>
                  <%= f.password_field :password, autocomplete: "off",class: "form-control outlineFld", placeholder: "" %>
                  <div class="formBtmLink"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div> 
                <% if devise_mapping.rememberable? -%>
                  <div>
                    <%= f.check_box :remember_me, class: "checkbox" %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                </div>
              </div>
              <div class="formBtnSection">
                <%= f.submit "Log in" , class: "btn primaryBtn" %>
              </div>
              <div class="formBtmLink"><%= link_to "New User? Sign up first.", new_user_registration_path %></div>
            </form>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="pageBg">
    <div class="pageBgCircle circleOne"></div>
    <div class="pageBgCircle circleTwo"></div>
    <div class="pageBgCircle circleThree"></div>
  </div>
  
</section>
